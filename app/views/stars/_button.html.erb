<% if !user_signed_in? %>
  <i class='fas fa-star'></i>
  <%= @star_count %>
<% else %>
<% if current_user.star?(resto) %>
  <%= link_to unstar_path(resto_id: resto.id), remote: true, method: :delete do %>
  <i class='fas fa-star'></i>
  <%= @star_count %>
  <% end %>
<% else %>
  <%= link_to star_path(resto_id: resto.id), remote: true, method: :post do %>
  <i class='far fa-star'></i>
  <%= @star_count %>
  <% end %>
<% end %>
<% end %>